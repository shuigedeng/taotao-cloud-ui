{
  "name": "taotao-cloud-ui",
  "private": false,
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "commit": "git add . && git status && git-cz",
    "push": "pnpm run commit && git push --set-upstream origin 3.0.0",
    "dev": "pnpm run --filter=@taotaocloud/ui dev",
    "prod": "pnpm run --filter=@taotaocloud/ui prod",
    "shared:build": "pnpm -r --filter=@taotao-cloud/* run build",
    "publish": "npm login && npm publish --access public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky-run": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|json|md|scss|ts|vue)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@quasar/extras": "^1.16.12",
    "lodash-es": "^4.17.21",
    "pinia": "^2.2.2",
    "pinia-plugin-persistedstate": "^3.2.3",
    "qs": "^6.13.0",
    "quasar": "^2.16.9",
    "vue": "^3.5.0",
    "vue-i18n": "^9.14.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@quasar/vite-plugin": "^1.7.0",
    "@types/lodash-es": "^4.17.12",
    "@types/qs": "^6.9.15",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-quasar": "^1.1.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.44",
    "postcss-html": "^1.7.0",
    "prettier": "^2.8.8",
    "rollup": "3.26.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.78.0",
    "stylelint": "^16.9.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "terser": "^5.31.6",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-icons": "^0.16.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^5.4.3",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-html": "^3.2.2",
    "vue-tsc": "^1.8.27"
  }
}
