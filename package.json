{
  "name": "taotao-cloud-ui",
  "private": false,
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "commit": "git add . && git status && git-cz",
    "push": "pnpm run commit && git push --set-upstream origin 3.0.0",
    "dev": "pnpm run --filter=@taotaocloud/ui dev",
    "prod": "pnpm run --filter=@taotaocloud/ui prod",
    "shared:build": "pnpm -r --filter=@taotao-cloud/* run build",
    "publish": "npm login && npm publish --access public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky-run": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|json|md|scss|ts|vue)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@quasar/extras": "^1.17.0",
    "lodash-es": "^4.17.21",
    "pinia": "^2.3.1",
    "pinia-plugin-persistedstate": "^3.2.3",
    "qs": "^6.14.0",
    "quasar": "^2.18.6",
    "vue": "^3.5.25",
    "vue-i18n": "^11.2.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@quasar/vite-plugin": "^1.10.0",
    "@types/lodash-es": "^4.17.12",
    "@types/qs": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-quasar": "^1.1.0",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "prettier": "^2.8.8",
    "rollup": "3.26.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^10.0.0",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-icons": "^0.16.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-html": "^3.2.2",
    "vue-tsc": "^1.8.27"
  }
}
